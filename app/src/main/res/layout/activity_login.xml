<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:background="@drawable/fundo_desfocado_2"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="150dp"
        app:cardBackgroundColor="@color/colorTransparent"
        app:cardCornerRadius="20dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardElevation="0dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Entrar"
                android:textSize="30sp"
                android:gravity="center_horizontal"/>

            <ImageView
                android:layout_width="300dp"
                android:layout_height="2dp"
                android:foregroundGravity="bottom"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="45dp"
                android:background="#000000"
                android:src="@drawable/opaco"
                >
            </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-40dp"
            android:layout_marginHorizontal="30dp"
            >

            <EditText
                android:id="@+id/edt_nome_login"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_border_text"
                android:hint="Email"
                android:inputType="textPersonName"
                android:textSize="15sp"
                android:padding="3dp"
                android:paddingStart="50dp"
                >

            </EditText>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="false"
                android:layout_marginHorizontal="0dp"
                android:layout_marginTop="20dp"
                >
                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="53dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_person_24dp"
                    tools:layout_editor_absoluteX="58dp"
                    tools:layout_editor_absoluteY="15dp"
                    android:background="#10f1f1f1"
                    />
            </LinearLayout>
            <EditText
                android:id="@+id/edt_senha_login"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:layout_marginTop="90dp"
                android:background="@drawable/edit_border_text"
                android:inputType="textPassword"
                android:textSize="15sp"
                android:padding="5dp"
                android:paddingStart="50dp"
                android:hint="Senha"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="false"
                android:layout_marginHorizontal="0dp"
                android:layout_marginTop="90dp"
                >
            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="53dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_security_24dp"
                android:background="#10f1f1f1"

                />
            </LinearLayout>
            <!--<Switch
                android:id="@+id/swt_lembrar_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lembrar senha"
                android:layout_marginTop="145dp"
                />-->
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="130dp"
            >
            <Button
                android:id="@+id/btn_entrar_login"
                android:layout_width="320dp"
                android:layout_height="49dp"
                android:background="@drawable/edit_border_button"
                android:text="Entrar"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:layout_marginHorizontal="20dp"
                android:textSize="17sp"
                android:text="Não é cadastrado(a)?"
                />
            <TextView
                android:id="@+id/txt_cadastrar_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="184dp"
                android:textSize="17sp"
                android:textColor="@color/colorLink"
                android:text="@string/cadastro_entrar"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
