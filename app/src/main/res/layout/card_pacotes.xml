<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="#f1f1f1"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >
    <androidx.cardview.widget.CardView
        android:id="@+id/card_pacote"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:forceHasOverlappingRendering="@color/colorWhite"
        app:cardCornerRadius="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardElevation="0dp"
        android:padding="0dp"
        android:layout_marginBottom="10dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="horizontal">
            <ImageView

                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/imageViewH"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_marginRight="15dp"
                android:scaleType="fitXY">
            </ImageView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_nome_pacote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:text=""
                    android:textSize="18dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txt_descricao_pacote"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text=""
                    android:textSize="15dp"
                    />

                <TextView
                    android:id="@+id/txt_valor_pacote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btn_ver_pacote"
                    android:layout_width="150dp"
                    android:background="@color/colorTransparent"
                    android:layout_height="30dp"
                    android:text="Saber mais"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>