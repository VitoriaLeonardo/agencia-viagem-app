<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PagRealizBoletoFragment"
    android:background="@drawable/fundo_desfocado_2"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <androidx.cardview.widget.CardView
            card_view:cardUseCompatPadding="true"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardElevation="0dp"
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="250dp"
            android:layout_marginBottom="90dp"
            card_view:cardBackgroundColor="@color/colorTransparent"
            card_view:cardCornerRadius="20dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Boleto"
                    android:textSize="30sp"
                    android:gravity="center_horizontal"/>

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="2dp"
                    android:foregroundGravity="bottom"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginTop="45dp"
                    android:background="#000000"
                    android:src="@drawable/opaco"
                    >
                </ImageView>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/boleto"
                android:layout_marginVertical="100dp"
                android:layout_marginHorizontal="50dp"
                android:textAlignment="center"
                />
            <Button
                android:id="@+id/btn_continuar_buscando"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:background="@drawable/edit_border_button"
                android:text="Ver mais pacotes"
                android:layout_marginVertical="210dp"
                android:layout_gravity="center_horizontal"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>